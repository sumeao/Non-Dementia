<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicTwoPlayer">

    <TextView
        android:id="@+id/tv_playerOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="玩家 X"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tv_playerOneScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_playerOne"
        app:layout_constraintLeft_toLeftOf="@+id/tv_playerOne"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/tv_playerTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="玩家 O"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"

        />

    <TextView
        android:id="@+id/tv_playerTwoScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_playerTwo"
        app:layout_constraintRight_toRightOf="@+id/tv_playerTwo"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/tv_playerStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAlignment="center"
        android:text="玩家 X 回合！"

        app:layout_constraintTop_toBottomOf="@+id/tv_playerOneScore"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/btn_0"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:textSize="60sp"

        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/tv_playerStatus"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:textSize="60sp"

        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@+id/btn_0"
        app:layout_constraintLeft_toRightOf="@+id/btn_0"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"


        />


    <Button
        android:id="@+id/btn_2"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:textSize="60sp"

        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@+id/btn_1"
        app:layout_constraintLeft_toRightOf="@+id/btn_1"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"


        />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:textSize="60dp"

        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/btn_0"
        app:layout_constraintLeft_toLeftOf="@+id/btn_0"


        />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:textSize="60dp"

        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@+id/btn_3"
        app:layout_constraintLeft_toRightOf="@+id/btn_3"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:textSize="60dp"

        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@+id/btn_4"
        app:layout_constraintLeft_toRightOf="@+id/btn_4"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:textSize="60dp"

        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/btn_3"
        app:layout_constraintLeft_toLeftOf="@+id/btn_3"


        />

    <Button
        android:id="@+id/btn_7"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:textSize="60dp"

        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@+id/btn_6"
        app:layout_constraintLeft_toRightOf="@+id/btn_6"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        />

    <Button
        android:id="@+id/btn_8"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:textSize="60dp"

        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@+id/btn_7"
        app:layout_constraintLeft_toRightOf="@+id/btn_7"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        />

    <Button
        android:id="@+id/btn_resetGame"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="重新開始"
        android:textColor="#ffffff"
        android:backgroundTint="#E1470D"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btn_6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="回首頁"
        android:textColor="#ffffff"
        android:backgroundTint="#E1470D"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btn_resetGame"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>